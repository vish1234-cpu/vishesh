@page "/deletestudent/{Id}" 
<form>
    <div class="row">
        <div class="col-md-6">
            @*<div class="form-group">
            <label for="ID" class="control-label" style="color:lightseagreen">ID</label>
            <input form="ID" class="form-control" @bind="@student.Id" />
        </div>*@
            <div class="form-group">
                <label for="Name" class="control-label" style="color:lightseagreen">Name</label>
                <input form="Name" class="form-control" @bind="@student.StudentName" />
            </div>

            <div class="form-group">
                <label for="Age" class="control-label" style="color:lightseagreen">Age</label>
                <input form="Age" class="form-control" @bind="@student.StudentAge" />
            </div>
            <div class="form-group">
                <label for="Address" class="control-label" style="color:lightseagreen">Gender</label>
                <input form="Address" class="form-control" @bind="@student.StudentGender" />
            </div>
            <div class="form-group">
                <label for="Address" class="control-label" style="color:lightseagreen">Address</label>
                <input form="Address" class="form-control" @bind="@student.StudentAddress" />
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" style="color:white;background-color:green" class="btn-btn-primary" @onclick="@DeleteStudentRecord" value="DELETE DETAILS" />
                <input type="button" style="color:white;background-color:red" class="btn-btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@functions
{
    [Parameter]
    public string Id { get; set; }
    Student student = new Student();
    protected override async Task OnInitializedAsync()
    {
        student = _student.GetStudentsById(Convert.ToInt32(Id));
    }


    private void DeleteStudentRecord() 
    {
        _student.Delete(student); 
        _navigation.NavigateTo("StudentPage");
    }
    private void Cancel()
    {
        _navigation.NavigateTo("StudentPage");
    }

}

